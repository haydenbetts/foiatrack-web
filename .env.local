NEXTAUTH_URL=https://3000-<your-codespace>.githubpreview.dev
# v5 name used by some deployments; harmless if unused
AUTH_URL=https://3000-<your-codespace>.githubpreview.dev
# trust proxied hosts (prevents host mismatch)
NEXTAUTH_TRUST_HOST=true
AUTH_TRUST_HOST=true

# email provider (Mailpit in docker)
EMAIL_SERVER_HOST=mailpit
EMAIL_SERVER_PORT=1025
EMAIL_FROM="FOIATrack <no-reply@foiatrack.app>"

# web's DB for NextAuth adapter
DATABASE_URL=postgresql://postgres:postgres@db:5432/foiatrack?schema=nextauth

# web -> api inside compose network (NOT localhost)
NEXT_PUBLIC_API_URL=http://api:4000
